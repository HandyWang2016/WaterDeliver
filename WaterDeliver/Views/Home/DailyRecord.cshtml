@model IEnumerable<Model.DailyRecord>

@{
    ViewBag.Title = "DailyRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-inline" method="post" action="/Home/QueryDailyRecord">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">查询条件</h4>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label class="col-sm-3 control-label" for="txtCustomerName">客户名称</label>
                <input type="text" required class="form-control col-sm-2" style="width: 300px" id="txtCustomerName" name="CustomerName" />
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="txtDateBegin">开始时间</label>
                <input type="text" required class="form-control col-sm-2" style="width: 200px" id="txtDateBegin" name="Address" />
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="txtDateEnd">结束时间</label>
                <input type="text" class="form-control col-sm-2" style="width: 200px" id="txtDateEnd" name="Contact" />
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="PayType">支付方式</label>
                <select name="PayType" id="PayType" class="selectpicker show-tick form-control col-sm-2" style="width: 150px" required data-live-search="true">
                    <option value="0">月底结算</option>
                    <option value="1">预购水卡</option>
                </select>
            </div>
            <input type="submit" value="查询" class="btn btn-primary" />
        </div>
    </div>
</form>

