@model IEnumerable<Model.Staff>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">员工信息</h4>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead><tr><td>ID</td><td>员工姓名</td><td>联系电话</td><td>其他信息</td><td>操作</td></tr></thead>
            @if (Model != null)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.StaffName</td>
                        <td>@item.StaffPhone</td>
                        <td>@item.Describe</td>
                        <td>@Html.ActionLink("删除", "Delete", "Staff", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })</td>
                    </tr>
                    i++;
                }
            }

        </table>
    </div>
</div>
<form class="form-inline" method="post" action="Staff/Create">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">添加员工</h4>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label for="txtName">员工姓名</label><input type="text" required class="form-control" id="txtName" name="StaffName" />
            </div>
            <div class="form-group">
                <label for="txtPhone">联系电话</label><input type="text" required class="form-control" id="txtPhone" name="StaffPhone" />
            </div>
            <div class="form-group">
                <label for="txtDes">其他信息</label><input type="text" class="form-control" id="txtDes" name="Describe" />
            </div>
            <input type="submit" value="提交" class="btn btn-primary" />
        </div>
    </div>
</form>
